@using Company.DAL.Entites
@model  List<Department>
@{
    ViewData["Title"] = "Index";
}
<
<h1>All Departments</h1>
<br />
<br/>
<a asp-action="Create"asp-controller="Departments"class="btn btn-primary">Create New Department</a>
<br/>
<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-2" asp-action="Index">
        <div class="col-8">
            <input type="text" name="searchInp" class="form-control" placeholder="Search By Name" id="searchInp" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="search" />
        </div>
    </form>
</div>
<br/>
@if(@Model.Count>0)
{
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th> Code </th>
            <th> Name </th>
            <th> Creation Date </th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var department in Model)
            {
              <tr>
                  <td>@department.Code</td>
                  <td>@department.Name</td>
                  <td>@department.CratedAt</td>
                    <partial name="_ButtonsPartial" model="@department.Id" />
              </tr>  
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-danger">
        <h3>There is No Departments :(</h3>
    </div>
}


